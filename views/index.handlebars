<h1>Cats!</h1>

<h2>Cats that are not sleepy!</h2>

<ul>
    {{#each burgers}}
        {{#unless this.devoured}}
            <li>
                {{this.burger_name}}

                <form action="/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="devour" value="true">
                    <button type="submit">Devour!</button>
                </form>
            </li>
        {{/unless}}
    {{/each}}
</ul>

<h2>Eat Dat Burger!</h2>

<ul>
    {{#each burgers}}
        {{#if this.devoured}}
            <li>
                {{this.burger_name}}

                <form action="/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="sleepy" value="false">
                    <button type="submit">WAKE UP!</button>
                </form>
            </li>
        {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

    <div class="form-group">
        <label for="bn">Burger Name:</label>
        <input type="text" id="bn" name="name">
    </div>

    <div class="form-group">
        <label for="slee">Sleepy?</label><br>
        <input type="radio" name="sleepy" value="1" checked> Sleepy!<br>
        <input type="radio" name="sleepy" value="0"> Awake
    </div>

    <button type="submit">Add Burger</button>
</form>
